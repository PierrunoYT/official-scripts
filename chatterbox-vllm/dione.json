{
    
    "requirements": {
        "os": ["linux"]
    },
    "dependencies": {
        "git": {
            "version": "latest"
        }
    },
    "installation": [
        {
            "name": "Cloning repository",
            "commands": [
                "git clone https://github.com/randombk/chatterbox-vllm.git app"
            ]
        },
        {
            "name": "Installing dependencies",
            "env": {
                "name": "env",
                "version": "3.10"
            },
            "commands": [
                "cd app",
                "uv pip install -e ."
            ]
        }
    ],
    "start": [
        {
            "name": "Starting chattered",
            "catch": "7860",
            "env": "env",
            "commands": [
                "cd app",
                "python gradio_tts_app.py"
            ]
        }
    ]
}