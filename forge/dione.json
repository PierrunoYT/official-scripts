{
    "dependencies": {
        "git": {
            "version": "latest"
        }
    },
    "installation": [
        {
            "name": "Cloning repository",
            "commands": [
                "git clone https://github.com/lllyasviel/stable-diffusion-webui-forge.git forge",
            ]
        },
        {
            "name": "Installing Forge",
            "env": {
                "name": "env",
                "python": "3.10"
            }, 
            "commands": [
                "cd forge",
                {
                    "platform": "windows",
                    "command": ".//webui-user.bat"
                },
                {
                    "platform": "linux",
                    "command": "./webui-user.sh"
                }
            ]
        }
    ],
    "start": [
        {
            "name": "Starting forge",
            "catch": "7860",
            "env": "env",
            "commands": [
                "cd forge",
                {
                    "platform": "windows",
                    "command": ".//webui-user.bat"
                },
                {
                    "platform": "linux",
                    "command": "./webui-user.sh"
                }
            ]
        }
    ]
}
