{
    "dependencies": {
        "git": {
            "version": "latest"
        }
    },
    "installation": [
        {
            "name": "Cloning repository",
            "commands": [
                "git clone https://github.com/deepbeepmeep/Wan2GP.git wan2gp"
            ]
        },
        {
            "name": "Creating virtual environment",
            "env": {
                "name": "env",
                "type": "conda",
                "version": "3.10.9"
            },
            "commands": [
                "cd wan2gp",
                "pip install torch==2.7.0 torchvision torchaudio --index-url https://download.pytorch.org/whl/test/cu124",
                "pip install -r requirements.txt"
            ]
        }

    ],
    "start": [
        {
            "name": "Starting Wan2GP",
            "env": {
                "name": "env",
                "type": "conda",
                "version": "3.10.9"
            },
            "catch": "7860",
            "commands": [
                "cd wan2gp",
                "python wgp.py"
            ]
        }
    ]
}