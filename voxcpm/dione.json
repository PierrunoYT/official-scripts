{
    "dependencies": {
        "git": {
            "version": "latest"
        },
        "uv": {
            "version": "latest"
        }
    },
    "installation": [
        {
            "name": "Installing PyTorch",
            "env": {
                "name": "env",
                "version": "3.10"
            },
            "commands": [
                {
                    "platform": "windows",
                    "command": "uv pip install torch==2.6.0 --index-url https://download.pytorch.org/whl/cu124"
                },
                {
                    "platform": "linux",
                    "command": "uv pip install torch==2.6.0 --index-url https://download.pytorch.org/whl/cu124"
                },
                {
                    "platform": "macos",
                    "command": "uv pip install torch==2.6.0"
                }
            ]
        },
        {
            "name": "Cloning VoxCPM repository",
            "commands": [
                "git clone https://github.com/OpenBMB/VoxCPM.git app"
            ]
        },
        {
            "name": "Installing VoxCPM dependencies",
            "env": "env",
            "commands": [
                "cd app",
                "uv pip install -e ."
            ]
        }
    ],
    "start": [
        {
            "name": "Starting VoxCPM",
            "catch": "7860",
            "env": "env",
            "commands": [
                "cd app",
                "python app.py"
            ]
        }
    ]
}
