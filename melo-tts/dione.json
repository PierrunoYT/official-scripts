{
    "dependencies": {
      "git": {
        "version": "latest"
      },
      "uv": {
        "version": "latest"
      }
    },
    "installation": [
      {
        "name": "Cloning repository",
        "commands": [
          "git clone https://github.com/myshell-ai/MeloTTS.git melotts"
        ]
      },
      {
        "name": "Installing requirements",
        "env": {
            "name": "env",
            "version": "3.10"
        },
        "commands": [
          "cd melotts",
          "uv pip install -e .",
          "python -m unidic download",
          { "platform": "windows", "command": "python -c \"import nltk; nltk.download('averaged_perceptron_tagger_eng')\"" }
        ]
      }
    ],
    "start": [
      {
        "name": "Starting MeloTTS",
        "catch": "8888",
        "env": "env",
        "commands": [
          "cd melotts/melo",
          "uv run app.py --port 8888"
        ]
      }
    ]
  }
