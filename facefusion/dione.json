{
    "requirements": {
        "gpus": ["nvidia", "amd"],
        "os": ["windows", "linux"]
    },
    "dependencies": {
        "git": {
            "version": "latest"
        },
        "conda": {
            "version": "latest"
        },
        "ffmpeg": {
            "version": "latest"
        }
    },
    "installation": [
        {
            "name": "Installing FaceFusion",
            "env": {
                "name": "env",
                "type": "conda",
                "version": "3.12"
            },
            "commands": [
                "git clone https://github.com/facefusion/facefusion facefusion",
                "cd facefusion",
                { "platform": "linux", "gpus": "amd", "command": "python install.py --onnxruntime rocm" },
                { "platform": "windows", "gpus": "amd", "command": "python install.py --onnxruntime directml" },
                { "platform": "windows", "gpus": "nvidia", "command": "python install.py --onnxruntime cuda" },
                { "platform": "linux", "gpus": "nvidia", "command": "python install.py --onnxruntime cuda" }
            ]
        }
    ],
    "start": [
        {
            "name": "Starting FaceFusion",
            "catch": "7865",
            "env": {
                "name": "env",
                "type": "conda",
                "version": "3.12"
            },
            "commands": [
                "cd facefusion",
                "python facefusion.py run"
            ]
        }
    ]
}
