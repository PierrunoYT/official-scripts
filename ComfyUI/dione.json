{
  "dependencies": {
    "git": {
      "version": "latest"
    },
    "uv": {
      "version": "latest"
    }
  },
  "installation": [
    {
      "name": "Cloning ComfyUI repository",
      "commands": [
        "git clone https://github.com/comfyanonymous/ComfyUI.git ComfyUI"
      ]
    },
    {
      "name": "Installing PyTorch and Python dependencies",
      "env": {
        "name": ".venv",
        "version": "3.10"
      },
      "commands": [
        "cd ComfyUI",
        "set \"HF_HUB_CACHE=%cd%\\.\\.cache\" && set \"HF_HOME=%cd%\\.\\.cache\" && uv pip install pip",
        "set \"HF_HUB_CACHE=%cd%\\.\\.cache\" && set \"HF_HOME=%cd%\\.\\.cache\" && uv pip install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu128",
        "set \"HF_HUB_CACHE=%cd%\\.\\.cache\" && set \"HF_HOME=%cd%\\.\\.cache\" && uv pip install -r requirements.txt",
        "set \"HF_HUB_CACHE=%cd%\\.\\.cache\" && set \"HF_HOME=%cd%\\.\\.cache\" && uv pip install GitPython pyyaml"
      ]
    },
    {
      "name": "Installing ComfyUI Manager",
      "commands": [
        "cd ComfyUI/custom_nodes",
        "git clone https://github.com/ltdrdata/ComfyUI-Manager.git"
      ]
    }
  ],
  "start": [
    {
      "name": "Default Start",
      "catch": "8188",
      "env": ".venv",
      "commands": [
        "cd ComfyUI",
        "set \"HF_HUB_CACHE=%cd%\\.\\.cache\" && set \"HF_HOME=%cd%\\.\\.cache\" && python main.py --listen 127.0.0.1 --port 8188 --disable-auto-launch"
      ]
    },
    {
      "name": "Start with Params",
      "catch": "8288",
      "env": ".venv",
      "steps": [
        {
          "name": "Starting ComfyUI",
          "commands": [
            "cd ComfyUI",
            "set \"HF_HUB_CACHE=%cd%\\.\\.cache\" && set \"HF_HOME=%cd%\\.\\.cache\"",
            { "command": "python main.py --port 8288", "customizable": true }
        ]
        }
    ]
    }
  ]
}
